{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "rootDir": "./",
    "outDir": "output",
    "noUnusedLocals": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
